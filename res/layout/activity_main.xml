<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <!-- поле результата -->
    <!-- поле знака операции -->

    <!-- поле ввода чисел -->

    <TextView
        android:id="@+id/resultField"
        android:layout_width="113dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/operationField"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operationField"
        android:layout_width="138dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/resultField"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberField"
        android:layout_width="152dp"
        android:layout_height="53dp"
        android:inputType="phone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultField"
        tools:ignore="ExtraText" />

    <LinearLayout
        android:id="@+id/firstButtonPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/numberField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="7"
            android:id="@+id/n7"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="8"
            android:id="@+id/n8"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="9"
            android:id="@+id/n9"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="/"
            android:id="@+id/div"
            app:cornerRadius="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondButtonPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/firstButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="4"
            android:id="@+id/n4"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="5"
            android:id="@+id/n5"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="6"
            android:id="@+id/n6"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="*"
            android:id="@+id/mul"
            app:cornerRadius="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdButtonPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/secondButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="1"
            android:id="@+id/n1"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="2"
            android:tag="num"
            android:id="@+id/n2"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="3"
            android:id="@+id/n3"
            app:cornerRadius="0dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="-"
            android:id="@+id/sub"
            app:cornerRadius="0dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/forthButtonPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/thirdButtonPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



    <Button
        android:id="@+id/n0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="0"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="601dp"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/comma"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text=","
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="598dp"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="+"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="598dp"
        app:cornerRadius="0dp"/>

    <Button
        android:id="@+id/eq"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:text="="
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="593dp"
        app:cornerRadius="0dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>